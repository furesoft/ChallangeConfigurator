<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ChallangeConfigurator.Views.Pages.MainMenuPage">
    <StackPanel Spacing="5">
        <ItemsControl Classes="headerButtons" Items="{Binding HeaderButtons}" />
        
        <ListBox Classes="items" Items="{Binding Games}" SelectedItem="{Binding SelectedGame, Mode=TwoWay}" />
    </StackPanel>
</UserControl>